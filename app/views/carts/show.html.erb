<div class="wrapper">
	<div class="container">
		<div class="content-section">
			<h1>Cart</h1>
			<% if !@cart_item.nil? && @cart_item.errors.any? %>
				<div class="alert alert-danger">
				<ul>
				<% @cart_item.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
				</ul>
				</div>
			<% end %>
			<h6>There is <%= "#{current_order.cart_items.size} Items in Cart ( #{number_to_currency current_order.subtotal} )" %></h6>
			<% if @cart_items.size == 0 %>
				<p class="text-center">
				There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> and add some items to your cart.
				</p>
			<% else %>
				<% @cart_items.each do |cart_item| %>
					<%= render 'carts/cart_row', post: cart_item.post, cart_item: cart_item, show_total: true %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>