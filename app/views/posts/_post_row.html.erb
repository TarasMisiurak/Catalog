<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= post.title %></small></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for cart_item, remote: true do |f| %>
      <h4 class="text-right">Item Price: <span style="color: green"><%= number_to_currency post.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1, style: "width: 50px"%>
          <div class="input-group-btn">
            <%= f.hidden_field :post_id, value: post.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>